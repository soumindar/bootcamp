// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String  @id @default(uuid())
  category  String  @unique
  Posts     Post[]
}

model Users {
  id           String    @id @default(uuid())
  name    String
  username     String    @unique
  password     String
  token        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deleted      DateTime?  
  Posts        Post[]
}

model Post {
  id            String    @id @default(uuid())
  userId        String
  categoryId    String
  title         String
  slug          String
  contents      String
  images        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deleted       DateTime?
  fkUsers       Users     @relation(fields: [userId], references: [id])
  fkCategory    Category  @relation(fields: [categoryId], references: [id])
}